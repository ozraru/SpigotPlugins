name: UserSwitcher
main: work.raru.spigot.user_switcher.Main
version: 0.1
author: ozraru
description: User Switcher
commands:
  login:
    description: Login. And set your UUID.
    aliases: [log_in, signin, sign_in]
    permission: user_switcher.login
    usage: |
      /command <id> <password>
      Example: /command ozraru ozraru_password - Login to ozraru.
      Example: /command ozraru ozraru_password - Login to ozraru.
  logout:
    description: Logout. And reset your UUID.
    aliases: [log_out, signout, sign_out]
    permission: user_switcher.logout
    usage: |
      /command
      Example: /command - Logout. And reset.
  get_uuid:
    description: Get your UUID.
    aliases: [uuid,getuuid]
    permission: user_switcher.logout
    usage: |
      /command [player]
      Example: /get_uuid - Get your UUID.
      Example: /get_uuid ozraru - Get ozraru's UUID.
permissions:
  user_switcher.*:
    description: Gives access to all switch user commands
    children:
      user_switcher.login: true
      user_switcher.logout: true
  user_switcher.login:
    description: Allows you login
    default: op
  user_switcher.logout:
    description: Allows you logout
    default: op
  